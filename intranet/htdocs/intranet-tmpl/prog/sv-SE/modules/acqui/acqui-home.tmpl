            <input type="submit" value="Search" />
            </p>
        </form>
		
    <!-- /TMPL_IF -->
    </fieldset>
</div>
<div id="acqui_acqui_home_suggestions">
    <fieldset>
    <legend>Pending suggestions</legend>
